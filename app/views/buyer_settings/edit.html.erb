<h1 class="text-xl font-bold underline bg-blue-900">
      testunderlined
</h1>

<h1>Edit Your Settings</h1>

<% if flash.now[:alert] %>
  <div class="alert-message error"><%= flash.now[:alert] %></div>
<% end %>

<% if flash.now[:notice] %>
  <div class="alert-message success"><%= flash.now[:notice] %></div>
<% end %>

<div class="settings-section">
  <h2>Update Profile Information</h2>
  <%= form_with(model: @buyer, url: update_profile_buyer_setting_path, method: :patch, local: true, class: 'profile-form') do |form| %>
    <div class="form-group">
      <%= form.label :first_name, class: 'form-label' %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: 'form-label' %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Profile", class: 'button primary' %>
    </div>
  <% end %>
</div>

<div class="settings-section">
  <h2>Update Password</h2>
  <%= form_with(model: @buyer, url: update_password_buyer_setting_path, method: :patch, local: true, class: 'password-form') do |form| %>
    <div class="form-group">
      <%= form.label :current_password, class: 'form-label' %>
      <%= form.password_field :current_password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, class: 'form-label' %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Password", class: 'button primary' %>
    </div>
  <% end %>
</div>

<div class="settings-section delete-account">
  <h2>Delete Account</h2>
  <p class="warning-message">
    <strong>Warning:</strong> Deleting your account is permanent and cannot be undone.
  </p>

  <%= button_to "Delete Account", delete_buyer_setting_path, method: :delete, data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." }, class: 'button danger' %>
</div>
