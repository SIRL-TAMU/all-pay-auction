<div class="justify-center flex mt-10"> 
  <div class="onboarding-card">

    <div class="login-title">Reset Your Password</div>

    <p class="mb-6 text-sm text-gray-600">
      Enter your email address and weâ€™ll send you a link to reset your password.
    </p>

    <%= form_with url: password_resets_path(account_type: params[:account_type]), method: :post do |f| %>
      <%= hidden_field_tag :account_type, params[:account_type] %>

      <div class="form-group">
        <%= label_tag :email, "Email", class: "text-sm font-medium mb-1" %>
        <%= email_field_tag :email, nil, required: true, class: "input-field" %>
      </div>

      <%= submit_tag "Send Reset Link", class: "login-btn mt-4" %>
    <% end %>
  </div>
</div>
